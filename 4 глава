    int a, b, c, d;
    cout << "Введите a, b, c, d: ";
    cin >> a >> b >> c >> d;
    
    int remainder = a % b;
    if (remainder == c || remainder == d) {
        cout << "Да, остаток равен " << remainder << endl;
    } else {
        cout << "Нет, остаток = " << remainder << endl;
    }
}

