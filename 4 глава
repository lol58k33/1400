    cin >> month;
    
    cout << "Год високосный?  (0-нет, 1-да): ";
    int is_leap;
    cin >> is_leap;
    
    switch (month) {
        case 1: case 3: case 5: case 7: case 8: case 10: case 12:
            cout << "31 день" << endl;
            break;
        case 4: case 6: case 9: case 11:
            cout << "30 дней" << endl;
            break;
        case 2: 
            if (is_leap) {
                cout << "29 дней (високосный год)" << endl;
            } else {
                cout << "28 дней" << endl;
            }
            break;
        default:
            cout << "Неверный номер месяца" << endl;
    }
}

