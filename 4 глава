    cout << "\n4.43. Делимость между двумя числами" << endl;
    int a, b;
    cout << "Введите a и b: ";
    cin >> a >> b;
    
    if ((b % a == 0) || (a % b == 0)) {
        cout << "Да, одно из чисел является делителем другого" << endl;
    } else {
        cout << "Нет, ни одно из чисел не является делителем другого" << endl;
    }
}

