void task4_125() {
    cout << "\n4.125. Согласование слова 'лет'" << endl;
    int n;
    cout << "Введите возраст (1-99): ";
    cin >> n;
    
    string word;
    int last_digit = n % 10;
    int last_two = n % 100;
    
    if (last_two >= 11 && last_two <= 19) {
        word = "лет";
    } else if (last_digit == 1) {
        word = "год";
    } else if (last_digit >= 2 && last_digit <= 4) {
        word = "года";
    } else {
        word = "лет";
    }
    
    cout << "Мне " << n << " " << word << endl;
}

void task4_126() {
    cout << "\n4.126. Согласование слова 'гриб'" << endl;
    int k;
    cout << "Введите количество грибов:  ";
    cin >> k;
    
    string word;
    int last_digit = k % 10;
    int last_two = k % 100;
    
    if (last_two >= 11 && last_two <= 19) {
        word = "грибов";
    } else if (last_digit == 1) {
        word = "гриб";
    } else if (last_digit >= 2 && last_digit <= 4) {
        word = "гриба";
    } else {
        word = "грибов";
    }
    
    cout << "Мы нашли " << k << " " << word << " в лесу" << endl;
}

void task4_127() {
    cout << "\n4.127. Стоимость в рублях и копейках" << endl;
    int n;
    cout << "Введите стоимость в копейках: ";
    cin >> n;
    
    int rubles = n / 100;
    int kopecks = n % 100;
    
    string ruble_word, kopeck_word;
    
    int r_last = rubles % 10;
    int r_last_two = rubles % 100;
    if (r_last_two >= 11 && r_last_two <= 19) {
        ruble_word = "рублей";
    } else if (r_last == 1) {
        ruble_word = "рубль";
    } else if (r_last >= 2 && r_last <= 4) {
        ruble_word = "рубля";
    } else {
        ruble_word = "рублей";
    }
    
    int k_last = kopecks % 10;
    int k_last_two = kopecks % 100;
    if (k_last_two >= 11 && k_last_two <= 19) {
        kopeck_word = "копеек";
    } else if (k_last == 1) {
        kopeck_word = "копейка";
    } else if (k_last >= 2 && k_last <= 4) {
        kopeck_word = "копейки";
    } else {
        kopeck_word = "копеек";
    }
    
    cout << rubles << " " << ruble_word << " " << kopecks << " " << kopeck_word << endl;
}

void task4_128() {
    cout << "\n4.128. Возраст в годах и месяцах" << endl;
    int n;
    cout << "Введите возраст в месяцах (1-1188): ";
    cin >> n;
    
    int years = n / 12;
    int months = n % 12;
    
    string year_word, month_word;
    
    int y_last = years % 10;
    int y_last_two = years % 100;
    if (y_last_two >= 11 && y_last_two <= 19) {
        year_word = "лет";
    } else if (y_last == 1) {
        year_word = "год";
    } else if (y_last >= 2 && y_last <= 4) {
        year_word = "года";
    } else {
        year_word = "лет";
    }
    
    int m_last = months % 10;
    int m_last_two = months % 100;
    if (m_last_two >= 11 && m_last_two <= 19) {
        month_word = "месяцев";
    } else if (m_last == 1) {
        month_word = "месяц";
    } else if (m_last >= 2 && m_last <= 4) {
        month_word = "месяца";
    } else {
        month_word = "месяцев";
    }
    
    cout << years << " " << year_word << " " << months << " " << month_word << endl;
}

void task4_129() {
    cout << "\n4.129. Возраст человека по датам рождения" << endl;
    int year_birth, month_birth, day_birth;
    int year_now, month_now, day_now;
    
    cout << "Введите дату рождения (год месяц день): ";
    cin >> year_birth >> month_birth >> day_birth;
    cout << "Введите текущую дату (год месяц день): ";
    cin >> year_now >> month_now >> day_now;
    
    int age = year_now - year_birth;
    
    if (month_now < month_birth || (month_now == month_birth && day_now < day_birth)) {
        age--;
    }
    
    cout << "Возраст: " << age << " лет" << endl;
}

void task4_130() {
    cout << "\n4.130. Кто из двух старше" << endl;
    int y1, m1, y2, m2;
    cout << "Введите год и месяц рождения первого:  ";
    cin >> y1 >> m1;
    cout << "Введите год и месяц рождения второ��о: ";
    cin >> y2 >> m2;
    
    if (y1 < y2) {
        cout << "Первый человек старше" << endl;
    } else if (y1 > y2) {
        cout << "Второй человек старше" << endl;
    } else {
        if (m1 < m2) {
            cout << "Первый человек старше" << endl;
        } else if (m1 > m2) {
            cout << "Второй человек старше" << endl;
        } else {
            cout << "Они одного возраста" << endl;
        }
    }
}

void task4_131() {
    cout << "\n4.131. Возраст в годах и месяцах (по датам рождения)" << endl;
    int year_birth, month_birth, year_now, month_now;
    
    cout << "Введите год и месяц рождения: ";
    cin >> year_birth >> month_birth;
    cout << "Введите текущий год и месяц: ";
    cin >> year_now >> month_now;
    
    int years = year_now - year_birth;
    int months = month_now - month_birth;
    
    if (months < 0) {
        years--;
        months += 12;
    }
    
    cout << "Возраст: " << years << " лет " << months << " месяцев" << endl;
}

void task4_135() {
    cout << "\n4.135. Светофор для водителей" << endl;
    double t;
    cout << "Введите время в минутах (с начала часа): ";
    cin >> t;
    
    int minute = (int)t % 6;  // Цикл 6 минут (3+1+2)
    
    if (minute < 3) {
        cout << "Горит ЗЕЛЕНЫЙ сигнал" << endl;
    } else if (minute < 4) {
        cout << "Горит ЖЕЛТЫЙ сигнал" << endl;
    } else {
        cout << "Горит КРАСНЫЙ сигнал" << endl;
    }
}

void task4_136a() {
    cout << "\n4.136a. Выходной или рабочий день (1 янв - пн)" << endl;
    int k;
    cout << "Введите номер дня года (1-365): ";
    cin >> k;
    
    int day_of_week = ((k - 1) % 7) + 1;
    
    if (day_of_week == 6 || day_of_week == 7) {
        cout << "Выходной день" << endl;
    } else {
        cout << "Рабочий день" << endl;
    }
}

void task4_137() {
    cout << "\n4.137. k-я цифра в последовательности 101112... 9899" << endl;
    int k;
    cout << "Введите номер цифры (1-180): ";
    cin >> k;
    
    int pair_number = (k - 1) / 2 + 1;
    int two_digit_number = 10 + pair_number - 1;
    int digit_position = (k - 1) % 2;
    
    int digit;
    if (digit_position == 0) {
        digit = two_digit_number / 10;
    } else {
        digit = two_digit_number % 10;
    }
    
    cout << k << "-я цифра: " << digit << endl;
}

void task4_122() {
    cout << "\n4.122. Существует ли треугольник?" << endl;
    double a, b, c;
    cout << "Введите три стороны:  ";
    cin >> a >> b >> c;
    
    if ((a + b > c) && (b + c > a) && (a + c > b)) {
        cout << "Да, треугольник существует" << endl;
    } else {
        cout << "Нет, треугольник не существует" << endl;
    }
}

void task4_123() {
    cout << "\n4.123. Треугольник прямоугольный?" << endl;
    double a, b, c;
    cout << "Введите три стороны: ";
    cin >> a >> b >> c;
    
    if ((a + b > c) && (b + c > a) && (a + c > b)) {
        // Сортируем стороны
        vector<double> sides = {a, b, c};
        sort(sides.begin(), sides.end());
        
        double eps = 1e-6;
        if (abs(sides[0]*sides[0] + sides[1]*sides[1] - sides[2]*sides[2]) < eps) {
            cout << "Да, треугольник прямоугольный" << endl;
        } else {
            cout << "Нет, треугольник не прямоугольный" << endl;
        }
    } else {
        cout << "Треугольник не существует" << endl;
    }
}

void task4_124() {
    cout << "\n4.124. Вид треугольника" << endl;
    double a, b, c;
    cout << "Введите три стороны: ";
    cin >> a >> b >> c;
    
    if ((a + b > c) && (b + c > a) && (a + c > b)) {
        vector<double> sides = {a, b, c};
        sort(sides.begin(), sides.end());
        
        double eps = 1e-6;
        double sq_sum = sides[0]*sides[0] + sides[1]*sides[1];
        double sq_hyp = sides[2]*sides[2];
        
        cout << "а) Вид треугольника: ";
        if (abs(sq_sum - sq_hyp) < eps) {
            cout << "Прямоугольный" << endl;
        } else if (sq_sum > sq_hyp) {
            cout << "Остроугольный" << endl;
        } else {
            cout << "Тупоугольный" << endl;
        }
        
        cout << "б) Вид и особенности: ";
        if (abs(a - b) < eps && abs(b - c) < eps) {
            cout << "Равносторонний" << endl;
        } else if ((abs(a - b) < eps) || (abs(b - c) < eps) || (abs(a - c) < eps)) {
            cout << "Равнобедренный, ";
            if (abs(sq_sum - sq_hyp) < eps) {
                cout << "прямоугольный" << endl;
            } else if (sq_sum > sq_hyp) {
                cout << "остроугольный" << endl;
            } else {
                cout << "тупоугольный" << endl;
            }
        } else {
            cout << "Разносторонний, ";
            if (abs(sq_sum - sq_hyp) < eps) {
                cout << "прямоугольный" << endl;
            } else if (sq_sum > sq_hyp) {
                cout << "остроугольный" << endl;
            } else {
                cout << "тупоугольный" << endl;
            }
        }
    } else {
        cout << "Треугольник не существует" << endl;
    }
}



