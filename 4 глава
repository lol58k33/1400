#include <iostream>
#include <iomanip>
#include <cmath>
using namespace std;

const double PI = 3.14159265359;
const double g = 9.8;

void task4_1() {
    cout << "\n4.1. y = sin(x) * x^2 при x <= 0, иначе y = 1 + 2*sin(x)" << endl;
    double x;
    cout << "Введите x: ";
    cin >> x;
    
    double y;
    if (x <= 0) {
        y = sin(x) * x * x;
    } else {
        y = 1 + 2 * sin(x);
    }
    
    cout << fixed << setprecision(4);
    cout << "y = " << y << endl;
}

void task4_2() {
    cout << "\n4.2. y = sin(x) * x^2 при x <= 0, иначе y = 1 + 2*sin(x)" << endl;
    double x;
    cout << "Введите x: ";
    cin >> x;
    
    double y;
    if (x <= 0) {
        y = sin(x) * x * x;
    } else {
        y = 1 + 2 * sin(x);
    }
    
    cout << fixed << setprecision(4);
    cout << "y = " << y << endl;
}

void task4_3() {
    cout << "\n4.3. Точка в области I или II (y <= 4, y >= 0)" << endl;
    double x, y;
    cout << "Введите координаты (x, y): ";
    cin >> x >> y;
    
    if (y >= 0 && y <= 4) {
        cout << "Точка в области I" << endl;
    } else {
        cout << "Точка в области II" << endl;
    }
}

void task4_4() {
    cout << "\n4.4. Точка в области I или II (y <= 3)" << endl;
    double x, y;
    cout << "Введите координаты (x, y): ";
    cin >> x >> y;
    
    if (y <= 3) {
        cout << "Точка в области I" << endl;
    } else {
        cout << "Точка в области II" << endl;
    }
}

void task4_5a() {
    cout << "\n4.5a. График функции (кусочно-линейная)" << endl;
    double x;
    cout << "Введите x: ";
    cin >> x;
    
    double y;
    if (x >= -3 && x <= 0) {
        y = 2 + x;  // линия от (-3,−1) к (0,2)
    } else if (x >= 0 && x <= 3) {
        y = 2 - (2. 0/3.0) * x;  // линия от (0,2) к (3,0)
    } else {
        y = 0;  // вне диапазона
    }
    
    cout << fixed << setprecision(2);
    cout << "y = " << y << endl;
}

void task4_5b() {
    cout << "\n4.5b. График функции" << endl;
    double x;
    cout << "Введите x: ";
    cin >> x;
    
    double y;
    if (x >= -3 && x <= 0) {
        y = x;  // линия y = x
    } else if (x >= 0 && x <= 3) {
        y = -x;  // линия y = -x
    } else {
        y = 0;
    }
    
    cout << fixed << setprecision(2);
    cout << "y = " << y << endl;
}

void task4_6() {
    cout << "\n4.6. Сравнение двух чисел" << endl;
    double a, b;
    cout << "Введите два различных числа: ";
    cin >> a >> b;
    
    cout << "a) Большее: " << (a > b ? a : b) << endl;
    cout << "b) Меньшее: " << (a < b ? a : b) << endl;
}

void task4_7() {
    cout << "\n4.7. Максимум и минимум двух чисел" << endl;
    double a, b;
    cout << "Введите два различных числа: ";
    cin >> a >> b;
    
    double max_val = (a > b) ? a : b;
    double min_val = (a < b) ? a : b;
    
    cout << "Максимум: " << max_val << endl;
    cout << "Минимум:  " << min_val << endl;
}

void task4_8() {
    cout << "\n4.8. Какое расстояние меньше (км или футы)" << endl;
    double km, feet;
    cout << "Введите расстояние в км:  ";
    cin >> km;
    cout << "Введите расстояние в футах: ";
    cin >> feet;
    
    double feet_in_km = feet * 0.305 / 1000;
    
    if (km < feet_in_km) {
        cout << "Меньше расстояние в км:  " << km << endl;
    } else {
        cout << "Меньше расстояние в футах: " << feet << " футов" << endl;
    }
}

void task4_9() {
    cout << "\n4.9. Какая скорость больше (км/ч или м/с)" << endl;
    double kmh, ms;
    cout << "Введите скорость в км/ч: ";
    cin >> kmh;
    cout << "Введите скорость в м/с: ";
    cin >> ms;
    
    double ms_in_kmh = ms * 3.6;
    
    if (kmh > ms_in_kmh) {
        cout << "Больше скорость в км/ч: " << kmh << endl;
    } else {
        cout << "Больше скорость в м/с: " << ms << endl;
    }
}

void task4_10() {
    cout << "\n4.10. Сравнение площадей круга и квадрата" << endl;
    double r, a;
    cout << "Введите радиус круга: ";
    cin >> r;
    cout << "Введите сторону квадрата: ";
    cin >> a;
    
    double area_circle = PI * r * r;
    double area_square = a * a;
    
    if (area_circle > area_square) {
        cout << "Площадь круга больше (" << area_circle << " > " << area_square << ")" << endl;
    } else {
        cout << "Площадь квадрата больше (" << area_square << " > " << area_circle << ")" << endl;
    }
}

void task4_11() {
    cout << "\n4.11. Какой материал плотнее" << endl;
    double V1, m1, V2, m2;
    cout << "Введите объем и массу первого тела: ";
    cin >> V1 >> m1;
    cout << "Введите объем и массу второго тела:  ";
    cin >> V2 >> m2;
    
    double rho1 = m1 / V1;
    double rho2 = m2 / V2;
    
    if (rho1 > rho2) {
        cout << "Первое тело плотнее (ρ = " << rho1 << ")" << endl;
    } else {
        cout << "Второе тело плотнее (ρ = " << rho2 << ")" << endl;
    }
}

void task4_12() {
    cout << "\n4.12. По какому участку меньший ток (I = U/R)" << endl;
    double R1, U1, R2, U2;
    cout << "Введите R1 и U1: ";
    cin >> R1 >> U1;
    cout << "Введите R2 и U2: ";
    cin >> R2 >> U2;
    
    double I1 = U1 / R1;
    double I2 = U2 / R2;
    
    if (I1 < I2) {
        cout << "По первому участку меньший ток (I = " << I1 << ")" << endl;
    } else {
        cout << "По второму участку меньший ток (I = " << I2 << ")" << endl;
    }
}

void task4_13() {
    cout << "\n4.13. Имеет ли уравнение ax²+bx+c=0 вещественные корни" << endl;
    double a, b, c;
    cout << "Введите коэффициенты a, b, c (a ≠ 0): ";
    cin >> a >> b >> c;
    
    double D = b * b - 4 * a * c;
    
    if (D >= 0) {
        cout << "Уравнение имеет вещественные корни" << endl;
    } else {
        cout << "Уравнение не имеет вещественных корней" << endl;
    }
}

void task4_14() {
    cout << "\n4.14. Найти корни квадратного уравнения" << endl;
    double a, b, c;
    cout << "Введите коэффициенты a, b, c (a ≠ 0): ";
    cin >> a >> b >> c;
    
    double D = b * b - 4 * a * c;
    
    if (D > 0) {
        double x1 = (-b + sqrt(D)) / (2 * a);
        double x2 = (-b - sqrt(D)) / (2 * a);
        cout << fixed << setprecision(4);
        cout << "Два корня: x1 = " << x1 << ", x2 = " << x2 << endl;
    } else if (D == 0) {
        double x = -b / (2 * a);
        cout << fixed << setprecision(4);
        cout << "Один корень: x = " << x << endl;
    } else {
        cout << "Вещественных корней нет" << endl;
    }
}

void task4_15() {
    cout << "\n4.15. Возраст человека (в полных годах)" << endl;
    int year_birth, month_birth, year_now, month_now;
    cout << "Введите год и месяц рождения: ";
    cin >> year_birth >> month_birth;
    cout << "Введите текущий год и месяц:  ";
    cin >> year_now >> month_now;
    
    int age = year_now - year_birth;
    if (month_now < month_birth) {
        age--;
    }
    
    cout << "Возраст:  " << age << " лет" << endl;
}

void task4_16() {
    cout << "\n4.16. Круг и квадрат - уместятся ли друг в друге" << endl;
    double S_circle, S_square;
    cout << "Введите площадь круга и площадь квадрата: ";
    cin >> S_circle >> S_square;
    
    // Радиус круга:  πr² = S_circle  =>  r = √(S_circle/π)
    double r = sqrt(S_circle / PI);
    // Сторона квадрата: a² = S_square  =>  a = √S_square
    double a = sqrt(S_square);
    
    cout << "\na) Уместится ли круг в квадрате?" << endl;
    if (2 * r <= a) {
        cout << "   ДА, диаметр круга (" << 2*r << ") <= стороне квадрата (" << a << ")" << endl;
    } else {
        cout << "   НЕТ, диаметр круга (" << 2*r << ") > стороны квадрата (" << a << ")" << endl;
    }
    
    cout << "\nb) Уместится ли квадрат в круге?" << endl;
    double diagonal = a * sqrt(2);
    if (diagonal <= 2 * r) {
        cout << "   ДА, диагональ квадрата (" << diagonal << ") <= диаметру круга (" << 2*r << ")" << endl;
    } else {
        cout << "   НЕТ, диагональ квадрата (" << diagonal << ") > диаметра круга (" << 2*r << ")" << endl;
    }
}

