    cout << "\n4.102. Номер четверти координатной плоскости" << endl;
    double x, y;
    cout << "Введите координаты (x, y) где x>0, y>0: ";
    cin >> x >> y;
    
    if (x > 0 && y > 0) {
        cout << "Точка в I четверти" << endl;
    }
}

void task4_103() {
    cout << "\n4.103. Максимум/минимум трех чисел (два неполных if)" << endl;
    double a, b, c;
    cout << "Введите три числа: ";
    cin >> a >> b >> c;
    
    cout << "a) Максимум:" << endl;
    double max_val = a;
    if (b > max_val) max_val = b;
    if (c > max_val) max_val = c;
    cout << "   " << max_val << endl;
    
    cout << "b) Минимум:" << endl;
    double min_val = a;
    if (b < min_val) min_val = b;
    if (c < min_val) min_val = c;
    cout << "   " << min_val << endl;
}

