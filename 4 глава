void task4_61() {
    cout << "\n4.61. Четырехзначное число - палиндром (с нулями)?" << endl;
    int n;
    cout << "Введите число (0-9999): ";
    cin >> n;
    
    // Представляем как 4-значное с нулями впереди
    int d1 = n / 1000;
    int d2 = (n / 100) % 10;
    int d3 = (n / 10) % 10;
    int d4 = n % 10;
    
    if (d1 == d4 && d2 == d3) {
        cout << "Да, число палиндром" << endl;
    } else {
        cout << "Нет, число не палиндром" << endl;
    }
}

void task4_62() {
    cout << "\n4.62. Четырехзначное число - ровно три одинаковые цифры?" << endl;
    int n;
    cout << "Введите число (0-9999): ";
    cin >> n;
    
    int d1 = n / 1000;
    int d2 = (n / 100) % 10;
    int d3 = (n / 10) % 10;
    int d4 = n % 10;
    
    int count = 0;
    for (int digit = 0; digit <= 9; digit++) {
        int freq = 0;
        if (d1 == digit) freq++;
        if (d2 == digit) freq++;
        if (d3 == digit) freq++;
        if (d4 == digit) freq++;
        
        if (freq == 3) {
            cout << "Да, ровно три цифры " << digit << endl;
            return;
        }
    }
    
    cout << "Нет, нет ровно трех одинаковых цифр" << endl;
}

void task4_63() {
    cout << "\n4.63. Четырехзначное число - все цифры различны?" << endl;
    int n;
    cout << "Введите число (0-9999): ";
    cin >> n;
    
    int d1 = n / 1000;
    int d2 = (n / 100) % 10;
    int d3 = (n / 10) % 10;
    int d4 = n % 10;
    
    if (d1 != d2 && d1 != d3 && d1 != d4 &&
        d2 != d3 && d2 != d4 && d3 != d4) {
        cout << "Да, все четыре цифры различны" << endl;
    } else {
        cout << "Нет, есть одинаковые цифры" << endl;
    }
}

void task4_64() {
    cout << "\n4.64. Счастливое ли шестизначное число?" << endl;
    int n;
    cout << "Введите шестизначное число: ";
    cin >> n;
    
    int d1 = n / 100000;
    int d2 = (n / 10000) % 10;
    int d3 = (n / 1000) % 10;
    int d4 = (n / 100) % 10;
    int d5 = (n / 10) % 10;
    int d6 = n % 10;
    
    int sum_first = d1 + d2 + d3;
    int sum_last = d4 + d5 + d6;
    
    if (sum_first == sum_last) {
        cout << "Да, число счастливое (" << sum_first << " = " << sum_last << ")" << endl;
    } else {
        cout << "Нет, число не счастливое (" << sum_first << " != " << sum_last << ")" << endl;
    }
}

void task4_65() {
    cout << "\n4.65. Год високосный?" << endl;
    int year;
    cout << "Введите год: ";
    cin >> year;
    
    bool is_leap = false;
    if (year % 400 == 0) {
        is_leap = true;
    } else if (year % 100 == 0) {
        is_leap = false;
    } else if (year % 4 == 0) {
        is_leap = true;
    }
    
    if (is_leap) {
        cout << "Да, " << year << " — високосный год" << endl;
    } else {
        cout << "Нет, " << year << " — невисокосный год" << endl;
    }
}

void task4_94() {
    cout << "\n4.94. Результат футбольной игры" << endl;
    int points;
    cout << "Введите количество очков: ";
    cin >> points;
    
    if (points == 3) {
        cout << "Результат:  ВЫИГРЫШ" << endl;
    } else if (points == 1) {
        cout << "Результат: НИЧЬЯ" << endl;
    } else if (points == 0) {
        cout << "Результат: ПРОИГРЫШ" << endl;
    }
}

void task4_95() {
    cout << "\n4.95. Весовая категория боксера" << endl;
    double weight;
    cout << "Введите вес боксера (кг): ";
    cin >> weight;
    
    if (weight < 60) {
        cout << "Легкий вес" << endl;
    } else if (weight < 64) {
        cout << "Первый полусредний вес" << endl;
    } else if (weight < 69) {
        cout << "Полусредний вес" << endl;
    } else {
        cout << "Вес вне категорий" << endl;
    }
}

void task4_96() {
    cout << "\n4.96. Решить квадратное уравнение" << endl;
    double a, b, c;
    cout << "Введите коэффициенты (a ≠ 0): ";
    cin >> a >> b >> c;
    
    double D = b * b - 4 * a * c;
    cout << fixed << setprecision(4);
    
    if (D > 0) {
        double x1 = (-b + sqrt(D)) / (2 * a);
        double x2 = (-b - sqrt(D)) / (2 * a);
        cout << "Два корня: x1 = " << x1 << ", x2 = " << x2 << endl;
    } else if (D == 0) {
        double x = -b / (2 * a);
        cout << "Один корень:  x = " << x << endl;
    } else {
        cout << "Вещественных корней нет" << endl;
    }
}

void task4_97() {
    cout << "\n4.97. Три различных числа - определить" << endl;
    int a, b, c;
    cout << "Введите три различных числа: ";
    cin >> a >> b >> c;
    
    int max_val = max({a, b, c});
    int min_val = min({a, b, c});
    int mid_val = a + b + c - max_val - min_val;
    
    cout << "a) Самое большое:  " << max_val << endl;
    cout << "b) Самое маленькое: " << min_val << endl;
    cout << "c) Среднее значение: " << mid_val << endl;
}

void task4_98() {
    cout << "\n4.98. Максимум и минимум трех чисел" << endl;
    double a, b, c;
    cout << "Введите три различных числа: ";
    cin >> a >> b >> c;
    
    double max_val = max({a, b, c});
    double min_val = min({a, b, c});
    
    cout << "Максимум: " << max_val << endl;
    cout << "Минимум:   " << min_val << endl;
}

void task4_99() {
    cout << "\n4.99. Сумма двух наибольших из трех чисел" << endl;
    double a, b, c;
    cout << "Введите три различных числа:  ";
    cin >> a >> b >> c;
    
    double max_val = max({a, b, c});
    double min_val = min({a, b, c});
    double sum = a + b + c - min_val;
    
    cout << "Сумма двух наибольших: " << sum << endl;
}

void task4_100() {
    cout << "\n4.100. Произведение двух наименьших из трех чисел" << endl;
    double a, b, c;
    cout << "Введите три различных числа: ";
    cin >> a >> b >> c;
    
    double max_val = max({a, b, c});
    double min_val = min({a, b, c});
    double mid_val = a + b + c - max_val - min_val;
    double product = min_val * mid_val;
    
    cout << "Произведение двух наименьших: " << product << endl;
}

void task4_101() {
    cout << "\n4.101. Среднее арифметическое средних чисел" << endl;
    double a, b, c, x, y, z;
    cout << "Введите первую тройку чисел (a, b, c): ";
    cin >> a >> b >> c;
    cout << "Введите вторую тройку чисел (x, y, z): ";
    cin >> x >> y >> z;
    
    // Находим средние числа
    vector<double> first = {a, b, c};
    vector<double> second = {x, y, z};
    sort(first.begin(), first.end());
    sort(second.begin(), second.end());
    
    double mid1 = first[1];
    double mid2 = second[1];
    double avg = (mid1 + mid2) / 2.0;
    
    cout << fixed << setprecision(4);
    cout << "Среднее число первой тройки: " << mid1 << endl;
    cout << "Среднее число второй тройки:   " << mid2 << endl;
    cout << "Среднее арифметическое: " << avg << endl;
}

