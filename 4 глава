void task4_20() {
    cout << "\n4.20. Делится ли m на n нацело?" << endl;
    int m, n;
    cout << "Введите m и n: ";
    cin >> m >> n;
    
    if (m % n == 0) {
        cout << "Да, частное:  " << m / n << endl;
    } else {
        cout << m << " на " << n << " нацело не делится" << endl;
    }
}

void task4_21() {
    cout << "\n4.21. Является ли a делителем числа b?" << endl;
    int a, b;
    cout << "Введите a и b: ";
    cin >> a >> b;
    
    if (b % a == 0) {
        cout << "Да, " << a << " является делителем " << b << endl;
    } else {
        cout << "Нет, " << a << " не является делителем " << b << endl;
    }
}

void task4_22() {
    cout << "\n4.22. Проверка натурального числа" << endl;
    int n;
    cout << "Введите натуральное число: ";
    cin >> n;
    
    cout << "a) Четное ли число?" << endl;
    if (n % 2 == 0) {
        cout << "   Да, число четное" << endl;
    } else {
        cout << "   Нет, число нечетное" << endl;
    }
    
    cout << "b) Оканчивается ли на 7?" << endl;
    if (n % 10 == 7) {
        cout << "   Да, заканчивается на 7" << endl;
    } else {
        cout << "   Нет, не заканчивается на 7" << endl;
    }
}

void task4_23() {
    cout << "\n4.23. Двузначное число - сравнение цифр" << endl;
    int n;
    cout << "Введите двузначное число: ";
    cin >> n;
    
    int tens = n / 10;
    int units = n % 10;
    
    cout << "a) Сравнение первой и второй цифр:" << endl;
    if (tens > units) {
        cout << "   Первая цифра больше (" << tens << " > " << units << ")" << endl;
    } else if (tens < units) {
        cout << "   Вторая цифра больше (" << units << " > " << tens << ")" << endl;
    } else {
        cout << "   Цифры равны" << endl;
    }
    
    cout << "b) Одинаковы ли цифры?" << endl;
    if (tens == units) {
        cout << "   Да, цифры одинаковые" << endl;
    } else {
        cout << "   Н��т, цифры различны" << endl;
    }
}

void task4_24() {
    cout << "\n4.24. n² = 4(a³+b³)?" << endl;
    int n;
    cout << "Введите двузначное число: ";
    cin >> n;
    
    int a = n / 10;
    int b = n % 10;
    
    int left = n * n;
    int right = 4 * (a*a*a + b*b*b);
    
    cout << "n² = " << left << ", 4(a³+b³) = " << right << endl;
    if (left == right) {
        cout << "Ответ: ДА" << endl;
    } else {
        cout << "Ответ: НЕТ" << endl;
    }
}

void task4_25() {
    cout << "\n4.25. Двузначное число - проверка суммы цифр" << endl;
    int n;
    cout << "Введите двузначное число: ";
    cin >> n;
    
    int tens = n / 10;
    int units = n % 10;
    int sum = tens + units;
    
    cout << "a) Сумма цифр двузначная?" << endl;
    if (sum >= 10 && sum <= 99) {
        cout << "   Да, сумма = " << sum << endl;
    } else {
        cout << "   Нет, сумма = " << sum << endl;
    }
    
    cout << "b) Сумма циф�� больше самого числа?" << endl;
    if (sum > n) {
        cout << "   Да, " << sum << " > " << n << endl;
    } else {
        cout << "   Нет, " << sum << " <= " << n << endl;
    }
}

void task4_26() {
    cout << "\n4.26. Двузначное число - делимость суммы цифр" << endl;
    int n;
    cout << "Введите двузначное число: ";
    cin >> n;
    
    int tens = n / 10;
    int units = n % 10;
    int sum = tens + units;
    
    cout << "a) Кратна ли сумма цифр трем?" << endl;
    if (sum % 3 == 0) {
        cout << "   Да, сумма " << sum << " кратна 3" << endl;
    } else {
        cout << "   Нет, сумма " << sum << " не кратна 3" << endl;
    }
    
    cout << "b) Кратна ли сумма цифр числу a?" << endl;
    if (sum % n == 0) {
        cout << "   Да, сумма кратна " << n << endl;
    } else {
        cout << "   Нет, сумма не кратна " << n << endl;
    }
}

void task4_27() {
    cout << "\n4.27. Трехзначное число - палиндром?" << endl;
    int n;
    cout << "Введите трехзначное число: ";
    cin >> n;
    
    int first = n / 100;
    int last = n % 10;
    
    if (first == last) {
        cout << "Да, число палиндром" << endl;
    } else {
        cout << "Нет, число не палиндром" << endl;
    }
}

void task4_28() {
    cout << "\n4.28. Трехзначное число - сравнение цифр" << endl;
    int n;
    cout << "Введите трехзначное число: ";
    cin >> n;
    
    int first = n / 100;
    int second = (n / 10) % 10;
    int third = n % 10;
    
    cout << "a) Первая или последняя цифра больше?" << endl;
    if (first > third) {
        cout << "   Первая (" << first << ") больше" << endl;
    } else {
        cout << "   Последняя (" << third << ") больше" << endl;
    }
    
    cout << "b) Первая или вторая цифра больше?" << endl;
    if (first > second) {
        cout << "   Первая (" << first << ") больше" << endl;
    } else {
        cout << "   Вторая (" << second << ") больше" << endl;
    }
    
    cout << "c) Вторая или последняя цифра больше?" << endl;
    if (second > third) {
        cout << "   Вторая (" << second << ") больше" << endl;
    } else {
        cout << "   Пос��едняя (" << third << ") больше" << endl;
    }
}

void task4_29() {
    cout << "\n4.29. n² = a³ + b³ + c³?" << endl;
    int n;
    cout << "Введите трехзначное число: ";
    cin >> n;
    
    int a = n / 100;
    int b = (n / 10) % 10;
    int c = n % 10;
    
    int left = n * n;
    int right = a*a*a + b*b*b + c*c*c;
    
    cout << "n² = " << left << ", a³+b³+c³ = " << right << endl;
    if (left == right) {
        cout << "Ответ:  ДА" << endl;
    } else {
        cout << "Ответ: НЕТ" << endl;
    }
}

void task4_30() {
    cout << "\n4.30. Трехзначное число - проверки" << endl;
    int n;
    cout << "Введите трехзначное число:  ";
    cin >> n;
    
    int a = n / 100;
    int b = (n / 10) % 10;
    int c = n % 10;
    int sum = a + b + c;
    int product = a * b * c;
    
    cout << "a) Сумма цифр двузначная?" << endl;
    if (sum >= 10 && sum <= 99) {
        cout << "   Да, сумма = " << sum << endl;
    } else {
        cout << "   Нет, сумма = " << sum << endl;
    }
    
    cout << "b) Произведение цифр трехзначное?" << endl;
    if (product >= 100 && product <= 999) {
        cout << "   Да, произведение = " << product << endl;
    } else {
        cout << "   Нет, произведение = " << product << endl;
    }
    
    cout << "c) Произведение цифр больше числа?" << endl;
    if (product > n) {
        cout << "   Да, " << product << " > " << n << endl;
    } else {
        cout << "   Нет, " << product << " <= " << n << endl;
    }
    
    cout << "d) Сумма цифр кратна 5?" << endl;
    if (sum % 5 == 0) {
        cout << "   Да, сумма кратна 5" << endl;
    } else {
        cout << "   Нет, сумма не кратна 5" << endl;
    }
    
    cout << "e) Сумма цифр кратна числу?" << endl;
    if (sum % n == 0) {
        cout << "   Да, сумма кратна " << n << endl;
    } else {
        cout << "   Нет, сумма не кратна " << n << endl;
    }
}

void task4_31() {
    cout << "\n4.31. Трехзначное число - одинаковые цифры?" << endl;
    int n;
    cout << "Введите трехзначное число: ";
    cin >> n;
    
    int a = n / 100;
    int b = (n / 10) % 10;
    int c = n % 10;
    
    cout << "a) Все цифры одинаковые?" << endl;
    if (a == b && b == c) {
        cout << "   Да, все цифры равны " << a << endl;
    } else {
        cout << "   Нет, цифры не все одинаковые" << endl;
    }
    
    cout << "b) Есть ли среди цифр одинаковые?" << endl;
    if (a == b || b == c || a == c) {
        cout << "   Да, есть одинаковые цифры" << endl;
    } else {
        cout << "   Нет, все цифры различны" << endl;
    }
}

void task4_32() {
    cout << "\n4.32. Четырехзначное число - проверки" << endl;
    int n;
    cout << "Введите четырехзначное число: ";
    cin >> n;
    
    int d1 = n / 1000;
    int d2 = (n / 100) % 10;
    int d3 = (n / 10) % 10;
    int d4 = n % 10;
    
    cout << "a) Сумма первых двух цифр = сумме последних двух?" << endl;
    if (d1 + d2 == d3 + d4) {
        cout << "   Да, " << d1+d2 << " = " << d3+d4 << endl;
    } else {
        cout << "   Нет, " << d1+d2 << " != " << d3+d4 << endl;
    }
    
    cout << "b) Сумма цифр кратна 3?" << endl;
    int sum = d1 + d2 + d3 + d4;
    if (sum % 3 == 0) {
        cout << "   Да, сумма = " << sum << " кратна 3" << endl;
    } else {
        cout << "   Нет, сумма = " << sum << " не кратна 3" << endl;
    }
    
    cout << "c) Произведение цифр кратно 4?" << endl;
    int product = d1 * d2 * d3 * d4;
    if (product % 4 == 0) {
        cout << "   Да, произведение кратно 4" << endl;
    } else {
        cout << "   Нет, произведение не кратно 4" << endl;
    }
    
    cout << "d) Произведение цифр кратно числу?" << endl;
    if (product % n == 0) {
        cout << "   Да, произведение кратно " << n << endl;
    } else {
        cout << "   Нет, произведение не кратно " << n << endl;
    }
}

void task4_33() {
    cout << "\n4.33. Натуральное число - четность последней цифры" << endl;
    int n;
    cout << "Введите натуральное число: ";
    cin >> n;
    
    int last_digit = n % 10;
    
    cout << "a) Заканчивается на четную цифру?" << endl;
    if (last_digit % 2 == 0) {
        cout << "   Да, " << last_digit << " — четная" << endl;
    } else {
        cout << "   Нет, " << last_digit << " — нечетная" << endl;
    }
    
    cout << "b) Заканчивается на нечетную цифру?" << endl;
    if (last_digit % 2 != 0) {
        cout << "   Да, " << last_digit << " — нечетная" << endl;
    } else {
        cout << "   Нет, " << last_digit << " — четная" << endl;
    }
}

void task4_34() {
    cout << "\n4.34. Является ли a делителем b и наоборот?" << endl;
    int a, b;
    cout << "Введите a и b: ";
    cin >> a >> b;
    
    bool a_divides_b = (b % a == 0);
    bool b_divides_a = (a % b == 0);
    
    cout << "a делит b:  " << (a_divides_b ? "ДА" : "НЕТ") << endl;
    cout << "b делит a:  " << (b_divides_a ? "ДА" :  "НЕТ") << endl;
}

void task4_36() {
    cout << "\n4.36. Светофор для пешеходов" << endl;
    double t;
    cout << "Введите время в минутах (с начала часа): ";
    cin >> t;
    
    int minute = (int)t % 10;  // Цикл 10 минут (3+2+3+2)
    
    if (minute < 3) {
        cout << "Горит ЗЕЛЕНЫЙ сигнал" << endl;
    } else if (minute < 5) {
        cout << "Горит КРАСНЫЙ сигнал" << endl;
    } else if (minute < 8) {
        cout << "Горит ЗЕЛЕНЫЙ сигнал" << endl;
    } else {
        cout << "Горит КРАСНЫЙ сигнал" << endl;
    }
}

