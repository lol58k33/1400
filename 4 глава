void task4_37() {
    cout << "\n4.37. Число в интервале (-5, 3)?" << endl;
    double x;
    cout << "Введите число: ";
    cin >> x;
    
    if (x > -5 && x < 3) {
        cout << "Да, число принадлежит интервалу (-5, 3)" << endl;
    } else {
        cout << "Нет, число не принадлежит интервалу (-5, 3)" << endl;
    }
}

void task4_38() {
    cout << "\n4.38. Точка в области I?" << endl;
    double x, y;
    cout << "Введите координаты (x, y): ";
    cin >> x >> y;
    
    if (x >= 0 && x <= 3 && y >= 0 && y <= 2) {
        cout << "Да, точка в области I" << endl;
    } else {
        cout << "Нет, точка вне области I" << endl;
    }
}

void task4_39() {
    cout << "\n4.39. Точка в области I или III?" << endl;
    double x, y;
    cout << "Введите координаты (x, y): ";
    cin >> x >> y;
    
    bool in_I = (x >= 0 && x <= 5 && y >= 0 && y <= 1);
    bool in_III = (x >= -1 && x <= 0 && y >= -1 && y <= 0);
    
    if (in_I || in_III) {
        cout << "Да, точка в области I или III" << endl;
    } else {
        cout << "Нет, точка вне областей I и III" << endl;
    }
}

void task4_40() {
    cout << "\n4.40. Вычисление f(x)" << endl;
    double x;
    cout << "Введите x: ";
    cin >> x;
    
    double fx;
    if (x >= 2. 4 && x <= 5.7) {
        fx = x * x;
    } else {
        fx = 4;
    }
    
    cout << fixed << setprecision(4);
    cout << "f(x) = " << fx << endl;
}

void task4_41() {
    cout << "\n4.41. Вычисление f(x)" << endl;
    double x;
    cout << "Введите x:  ";
    cin >> x;
    
    double fx;
    if (x >= 0.2 && x <= 0.9) {
        fx = sin(x);
    } else {
        fx = 1;
    }
    
    cout << fixed << setprecision(4);
    cout << "f(x) = " << fx << endl;
}

void task4_42() {
    cout << "\n4.42. Проверка неравенств для трех чисел" << endl;
    double a, b, c;
    cout << "Введите три числа a, b, c: ";
    cin >> a >> b >> c;
    
    cout << "a) a < b < c ?" << endl;
    if (a < b && b < c) {
        cout << "   Да, " << a << " < " << b << " < " << c << endl;
    } else {
        cout << "   Нет" << endl;
    }
    
    cout << "b) b > a > c ?" << endl;
    if (b > a && a > c) {
        cout << "   Да, " << b << " > " << a << " > " << c << endl;
    } else {
        cout << "   Нет" << endl;
    }
}

