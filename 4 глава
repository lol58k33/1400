void task4_113a() {
    cout << "\n4.113a. Дата предыдущего дня" << endl;
    int m, n;
    cout << "Введите месяц и число (не 1 января): ";
    cin >> m >> n;
    
    int prev_n = n - 1;
    int prev_m = m;
    
    if (prev_n == 0) {
        prev_m--;
        if (prev_m == 0) prev_m = 12;
        
        // Определяем дни в месяце
        switch (prev_m) {
            case 1: case 3: case 5: case 7: case 8: case 10: case 12:
                prev_n = 31; break;
            case 4: case 6: case 9: case 11:
                prev_n = 30; break;
            case 2:
                prev_n = 28; break;  // Не високосный год
        }
    }
    
    cout << "Предыдущий день: " << prev_n << "." << prev_m << endl;
}

void task4_113b() {
    cout << "\n4.113b. Дата следующего дня" << endl;
    int m, n;
    cout << "Введите месяц и число (не 31 декабря): ";
    cin >> m >> n;
    
    // Определяем дни в месяце
    int days_in_month;
    switch (m) {
        case 1: case 3: case 5: case 7: case 8: case 10: case 12:
            days_in_month = 31; break;
        case 4: case 6: case 9: case 11:
            days_in_month = 30; break;
        case 2:
            days_in_month = 28; break;
        default:
            days_in_month = 0;
    }
    
    int next_n = n + 1;
    int next_m = m;
    
    if (next_n > days_in_month) {
        next_n = 1;
        next_m++;
        if (next_m > 12) next_m = 1;
    }
    
    cout << "Следующий день: " << next_n << "." << next_m << endl;
}

void task4_114a() {
    cout << "\n4.114a. Дата предыдущего дня (с учетом года)" << endl;
    int g, m, n;
    cout << "Введите год, месяц и число: ";
    cin >> g >> m >> n;
    
    int prev_n = n - 1;
    int prev_m = m;
    int prev_g = g;
    
    if (prev_n == 0) {
        prev_m--;
        if (prev_m == 0) {
            prev_m = 12;
            prev_g--;
        }
        
        // Определяем дни в месяце с учетом високоса
        bool is_leap = (prev_g % 400 == 0) || (prev_g % 4 == 0 && prev_g % 100 != 0);
        switch (prev_m) {
            case 1: case 3: case 5: case 7: case 8: case 10: case 12:
                prev_n = 31; break;
            case 4: case 6: case 9: case 11:
                prev_n = 30; break;
            case 2:
                prev_n = is_leap ? 29 : 28; break;
        }
    }
    
    cout << "Предыдущий день: " << prev_n << "." << prev_m << "." << prev_g << endl;
}

void task4_114b() {
    cout << "\n4.114b. Дата следующего дня (с учетом года)" << endl;
    int g, m, n;
    cout << "Введите год, месяц и число: ";
    cin >> g >> m >> n;
    
    // Определяем дни в текущем месяце с учетом високоса
    bool is_leap = (g % 400 == 0) || (g % 4 == 0 && g % 100 != 0);
    int days_in_month;
    switch (m) {
        case 1: case 3: case 5: case 7: case 8: case 10: case 12:
            days_in_month = 31; break;
        case 4: case 6: case 9: case 11:
            days_in_month = 30; break;
        case 2:
            days_in_month = is_leap ? 29 : 28; break;
        default:
            days_in_month = 0;
    }
    
    int next_n = n + 1;
    int next_m = m;
    int next_g = g;
    
    if (next_n > days_in_month) {
        next_n = 1;
        next_m++;
        if (next_m > 12) {
            next_m = 1;
            next_g++;
        }
    }
    
    cout << "Следующий день: " << next_n << "." << next_m << "." << next_g << endl;
}

void task4_115() {
    cout << "\n4.115. Восточный календарь" << endl;
    int year;
    cout << "Введите год нашей эры: ";
    cin >> year;
    
    // Животные (начиная с 1984 года)
    string animals[] = {
        "Крыса", "Корова", "Тигр", "Заяц", "Дракон", "Змея",
        "Лошадь", "Овца", "Обезьяна", "Петух", "Собака", "Свинья"
    };
    
    // Цвета (начиная с зеленого)
    string colors[] = {"Зеленый", "Красный", "Желтый", "Белый", "Черный"};
    
    // Вычисляем позицию в 60-летнем цикле
    int pos_in_cycle = (year - 1984) % 60;
    if (pos_in_cycle < 0) pos_in_cycle += 60;
    
    // Животное:  каждое животное повторяется 5 раз (по одному для каждого цвета)
    int animal_index = (pos_in_cycle / 5) % 12;
    
    // Цвет: каждый цвет "действует" два года
    int color_index = (pos_in_cycle / 2) % 5;
    
    cout << "Год: " << animals[animal_index] << ", " << colors[color_index] << endl;
}

