void task4_49() {
    cout << "\n4.49. Решить уравнение ax²+bx+c=0" << endl;
    double a, b, c;
    cout << "Введите коэффициенты a, b, c (a ≠ 0): ";
    cin >> a >> b >> c;
    
    double D = b * b - 4 * a * c;
    cout << fixed << setprecision(4);
    
    if (D > 0) {
        double x1 = (-b + sqrt(D)) / (2 * a);
        double x2 = (-b - sqrt(D)) / (2 * a);
        cout << "Два различных корня: x1 = " << x1 << ", x2 = " << x2 << endl;
    } else if (D == 0) {
        double x = -b / (2 * a);
        cout << "Один корень (кратный): x = " << x << endl;
    } else {
        cout << "Вещественных корней нет" << endl;
    }
}

void task4_50() {
    cout << "\n4.50. Уместится ли прямоугольник в прямоугольнике" << endl;
    double a, b, c, d;
    cout << "Введите размеры первого прямоугольника (a, b): ";
    cin >> a >> b;
    cout << "Введите размеры второго прямоугольника (c, d): ";
    cin >> c >> d;
    
    bool fit1 = (a <= c && b <= d);
    bool fit2 = (a <= d && b <= c);
    
    if (fit1 || fit2) {
        cout << "Да, первый прямоугольник уместится во второй" << endl;
    } else {
        cout << "Нет, первый прямоугольник не уместится во второй" << endl;
    }
}

void task4_51() {
    cout << "\n4.51. Открытка в конверт?" << endl;
    double a, b, c, d;
    cout << "Введите размеры конверта (a, b мм): ";
    cin >> a >> b;
    cout << "Введите размеры открытки (c, d мм): ";
    cin >> c >> d;
    
    bool fit1 = (c <= a - 2 && d <= b - 2);
    bool fit2 = (c <= b - 2 && d <= a - 2);
    
    if (fit1 || fit2) {
        cout << "Да, открытка уместится в конверт" << endl;
    } else {
        cout << "Нет, открытка не уместится в конверт" << endl;
    }
}

void task4_52() {
    cout << "\n4.52. Голова в форточку?" << endl;
    double a, b, d;
    cout << "Введите размеры форточки (a, b см): ";
    cin >> a >> b;
    cout << "Введите диаметр головы (d см): ";
    cin >> d;
    
    double required_width = d + 2;
    double required_height = d + 2;
    
    if ((a >= required_width && b >= required_height) ||
        (a >= required_height && b >= required_width)) {
        cout << "Да, Вася может просунуть голову в форточку" << endl;
    } else {
        cout << "Нет, голова не пройдет в форточку" << endl;
    }
}

void task4_53() {
    cout << "\n4.53. Кирпич в отверстие?" << endl;
    double a, b, c, x, y;
    cout << "Введите ребра кирпича (a, b, c): ";
    cin >> a >> b >> c;
    cout << "Введите размеры отверстия (x, y): ";
    cin >> x >> y;
    
    bool fit1 = (a <= x && b <= y);
    bool fit2 = (a <= y && b <= x);
    bool fit3 = (b <= x && c <= y);
    bool fit4 = (b <= y && c <= x);
    bool fit5 = (a <= x && c <= y);
    bool fit6 = (a <= y && c <= x);
    
    if (fit1 || fit2 || fit3 || fit4 || fit5 || fit6) {
        cout << "Да, кирпич пройдет в отверстие" << endl;
    } else {
        cout << "Нет, кирпич не пройдет" << endl;
    }
}

void task4_54() {
    cout << "\n4.54. Коробка в чемодан?" << endl;
    double a1, a2, a3, b1, b2, b3;
    cout << "Введите размеры чемодана (a1, a2, a3): ";
    cin >> a1 >> a2 >> a3;
    cout << "Введите размеры коробки (b1, b2, b3): ";
    cin >> b1 >> b2 >> b3;
    
    // Сортируем размеры
    vector<double> chest = {a1, a2, a3};
    vector<double> box = {b1, b2, b3};
    sort(chest.begin(), chest.end());
    sort(box.begin(), box.end());
    
    bool fits = true;
    for (int i = 0; i < 3; i++) {
        if (box[i] > chest[i]) {
            fits = false;
            break;
        }
    }
    
    if (fits) {
        cout << "Да, коробка уместится в чемодан" << endl;
    } else {
        cout << "Нет, коробка не уместится" << endl;
    }
}

void task4_55() {
    cout << "\n4.55. Двузначное число - есть ли цифра?" << endl;
    int n;
    cout << "Введите двузначное число:  ";
    cin >> n;
    
    int tens = n / 10;
    int units = n % 10;
    
    cout << "a) Входит ли цифра 3?" << endl;
    if (tens == 3 || units == 3) {
        cout << "   Да, содержит цифру 3" << endl;
    } else {
        cout << "   Нет, не содержит цифру 3" << endl;
    }
    
    cout << "b) Введите цифру для поиска:  ";
    int digit;
    cin >> digit;
    cout << "Входит ли цифра " << digit << "?" << endl;
    if (tens == digit || units == digit) {
        cout << "   Да, содержит цифру " << digit << endl;
    } else {
        cout << "   Нет, не содержит цифру " << digit << endl;
    }
}

