#include <iostream>

int main() {
    double a, b;
    std::cout << "Введите значения a и b для 1.34: ";
    std::cin >> a >> b;
    if (a == 0) {
        std::cout << "Уравнение не является линейным. a не может быть равно 0." << std::endl;
        return 1;
    }
    double x = -b / a;
    std::cout << "Решение уравнения x = " << x << std::endl;

    return 0;
}
