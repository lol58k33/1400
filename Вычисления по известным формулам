int main() {
    double length, width, height;
    std::cout << "Введите длины сторон прямоугольного параллелепипеда: ";
    std::cin >> length >> width >> height;
    
    double volume = length * width * height;
    double lateral_surface_area = 2 * (length * height + width * height);
    
    std::cout << "Объем: " << volume << std::endl;
    std::cout << "Площадь боковой поверхности: " << lateral_surface_area << std::endl;
    
    return 0;
}
