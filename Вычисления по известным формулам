1.39
#include <iostream>
#include <cmath>

using namespace std;

int main() {
    double x, y;

    cout << "Введите значение x: ";
    cin >> x;
    cout << "Введите значение y: ";
    cin >> y;

    // Вычисление z
    if (y + 1.0 / sqrt(pow(x, 2) + 10) == 0) {
        cout << "Знаменатель для z равен нулю. Вычисление невозможно." << endl;
    } else {
        double z = (x + (2.0 + y) / pow(x, 2)) / (y + 1.0 / sqrt(pow(x, 2) + 10));
        cout << "Значение z = " << z << endl;
    }

    // Вычисление q
    double q = 2.8 * sin(x) + fabs(y);
    cout << "Значение q = " << q << endl;

    return 0;
}
1.40
#include <iostream>
#include <cmath>

using namespace std;

int main() {
    double a, b;

    cout << "Введите значение a: ";
    cin >> a;
    cout << "Введите значение b: ";
    cin >> b;

    // Вычисление x
    if (sqrt(b) + (a + b) / 2.0 == 0) {
        cout << "Знаменатель для x равен нулю. Вычисление невозможно." << endl;
    } else {
        double x = (2.0 / (pow(a, 2) + 25) + b) / (sqrt(b) + (a + b) / 2.0);
        cout << "Значение x = " << x << endl;
    }

    // Вычисление y
    if (5.5 * a == 0) {
        cout << "Знаменатель для y равен нулю. Вычисление невозможно." << endl;
    } else {
        double y = (fabs(a) + 2.0 * sin(b)) / (5.5 * a);
        cout << "Значение y = " << y << endl;
    }

    return 0;
}
1.41
#include <iostream>
#include <cmath>

int main() {
    double e, f, g, h;

    std::cout << "Введите значение e: ";
    std::cin >> e;
    std::cout << "Введите значение f: ";
    std::cin >> f;
    std::cout << "Введите значение g: ";
    std::cin >> g;
    std::cout << "Введите значение h: ";
    std::cin >> h;

    // Проверка на деление на ноль для функции a
    if (f == 0) {
        std::cout << "Ошибка: f не может быть равно 0 для вычисления a." << std::endl;
        return 1;
    }
    // Проверка на деление на ноль для функции c
    if (e * f - 3 == 0) {
        std::cout << "Ошибка: e*f-3 не может быть равно 0 для вычисления c." << std::endl;
        return 1;
    }

    double a = sqrt(pow(fabs(e - 3.0 / f), 3) + g);
    double b = sin(e) + pow(cos(h), 2);
    double c = (33.0 * g) / (e * f - 3.0);

    std::cout << "Значение a: " << a << std::endl;
    std::cout << "Значение b: " << b << std::endl;
    std::cout << "Значение c: " << c << std::endl;

    return 0;
}
1.42
#include <iostream>
#include <cmath>

int main() {
    double e, f, g, h;

    std::cout << "Введите значение e: ";
    std::cin >> e;
    std::cout << "Введите значение f: ";
    std::cin >> f;
    std::cout << "Введите значение g: ";
    std::cin >> g;
    std::cout << "Введите значение h: ";
    std::cin >> h;

    // Проверка на отрицательное значение под корнем для функции c
    if (pow(g - h, 2) - 3 * sin(e) < 0) {
        std::cout << "Ошибка: Выражение под корнем для c отрицательно." << std::endl;
        return 1;
    }

    double a = (e + f / 2.0) / 3.0;
    double b = fabs(pow(h, 2) - g);
    double c = sqrt(pow(g - h, 2) - 3 * sin(e));

    std::cout << "Значение a: " << a << std::endl;
    std::cout << "Значение b: " << b << std::endl;
    std::cout << "Значение c: " << c << std::endl;

    return 0;
}
