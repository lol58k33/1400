1.36
#include <iostream>
#include <cmath>

int main() {
    const double PI = 3.141592653589793;
    double outer_radius, inner_radius;
    std::cout << "Введите внешний и внутренний радиусы для 1.36: ";
    std::cin >> outer_radius >> inner_radius;
    if (inner_radius >= outer_radius) {
        std::cout << "Внутренний радиус должен быть меньше внешнего." << std::endl;
        return 1;
    }
    double area = PI * (pow(outer_radius, 2) - pow(inner_radius, 2));
    std::cout << "Площадь кольца равна: " << area << std::endl;

    return 0;
}
1.37
#include <iostream>
#include <cmath>

int main() {
    double cathetus1, cathetus2;
    std::cout << "Введите длины двух катетов для 1.37: ";
    std::cin >> cathetus1 >> cathetus2;
    double hypotenuse = sqrt(pow(cathetus1, 2) + pow(cathetus2, 2));
    double perimeter = cathetus1 + cathetus2 + hypotenuse;
    std::cout << "Периметр треугольника равен: " << perimeter << std::endl;

    return 0;
}
1.39
#include <iostream>
#include <cmath>

using namespace std;

int main() {
    double x, y;

    cout << "Введите значение x: ";
    cin >> x;
    cout << "Введите значение y: ";
    cin >> y;

    // Вычисление z
    if (y + 1.0 / sqrt(pow(x, 2) + 10) == 0) {
        cout << "Знаменатель для z равен нулю. Вычисление невозможно." << endl;
    } else {
        double z = (x + (2.0 + y) / pow(x, 2)) / (y + 1.0 / sqrt(pow(x, 2) + 10));
        cout << "Значение z = " << z << endl;
    }

    // Вычисление q
    double q = 2.8 * sin(x) + fabs(y);
    cout << "Значение q = " << q << endl;

    return 0;
}
1.40
#include <iostream>
#include <cmath>

using namespace std;

int main() {
    double a, b;

    cout << "Введите значение a: ";
    cin >> a;
    cout << "Введите значение b: ";
    cin >> b;

    // Вычисление x
    if (sqrt(b) + (a + b) / 2.0 == 0) {
        cout << "Знаменатель для x равен нулю. Вычисление невозможно." << endl;
    } else {
        double x = (2.0 / (pow(a, 2) + 25) + b) / (sqrt(b) + (a + b) / 2.0);
        cout << "Значение x = " << x << endl;
    }

    // Вычисление y
    if (5.5 * a == 0) {
        cout << "Знаменатель для y равен нулю. Вычисление невозможно." << endl;
    } else {
        double y = (fabs(a) + 2.0 * sin(b)) / (5.5 * a);
        cout << "Значение y = " << y << endl;
    }

    return 0;
}
