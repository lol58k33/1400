1.27
#include <iostream>
#include <cmath>

int main() {
    const double R = 6350.0; // Радиус Земли в км
    double h; // Высота над Землей в км
    std::cout << "Введите высоту над Землей в км для 1.27: ";
    std::cin >> h;
    double distance = sqrt(pow(R + h, 2) - pow(R, 2));
    std::cout << "Расстояние до линии горизонта равно: " << distance << " км" << std::endl;

    return 0;
}
