1.48
#include <iostream>
#include <cmath>

int main() {
    double base1, base2, height;
    std::cout << "Введите основания и высоту равнобедренной трапеции: ";
    std::cin >> base1 >> base2 >> height;
    
    double side_length = std::sqrt(std::pow((base1 - base2) / 2.0, 2) + std::pow(height, 2));
    double perimeter = base1 + base2 + 2 * side_length;
    
    std::cout << "Периметр трапеции: " << perimeter << std::endl;
    
    return 0;
}
1.49
#include <iostream>
#include <cmath>

int main() {
    double base1, base2, angle_degrees;
    std::cout << "Введите основания и угол при большем основании (в градусах): ";
    std::cin >> base1 >> base2 >> angle_degrees;
    
    double angle_radians = angle_degrees * M_PI / 180.0;
    double height = std::abs(base1 - base2) / 2.0 * std::tan(angle_radians);
    double area = (base1 + base2) / 2.0 * height;
    
    std::cout << "Площадь трапеции: " << area << std::endl;
    
    return 0;
}
1.50
#include <iostream>
#include <cmath>

double calculate_distance(double x1, double y1, double x2, double y2) {
    return std::sqrt(std::pow(x2 - x1, 2) + std::pow(y2 - y1, 2));
}

int main() {
    double x1, y1, x2, y2, x3, y3;
    std::cout << "Введите координаты вершин треугольника (x1 y1 x2 y2 x3 y3): ";
    std::cin >> x1 >> y1 >> x2 >> y2 >> x3 >> y3;
    
    double side_a = calculate_distance(x1, y1, x2, y2);
    double side_b = calculate_distance(x2, y2, x3, y3);
    double side_c = calculate_distance(x3, y3, x1, y1);
    
    double perimeter = side_a + side_b + side_c;
    
    double s = perimeter / 2.0;
    double area = std::sqrt(s * (s - side_a) * (s - side_b) * (s - side_c));
    
    std::cout << "Периметр треугольника: " << perimeter << std::endl;
    std::cout << "Площадь треугольника: " << area << std::endl;
    
    return 0;
}

