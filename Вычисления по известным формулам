#include <iostream>
#include <cmath>

int main() {
    double edge;
    std::cout << "Введите длину ребра куба для 1.28: ";
    std::cin >> edge;
    double volume = pow(edge, 3);
    double lateral_surface_area = 4 * pow(edge, 2);
    std::cout << "Объем куба равен: " << volume << std::endl;
    std::cout << "Площадь его боковой поверхности равна: " << lateral_surface_area << std::endl;

    return 0;
}
1.29
#include <iostream>
#include <cmath>

int main() {
    const double PI = 3.141592653589793;
    double radius;
    std::cout << "Введите радиус окружности для 1.29: ";
    std::cin >> radius;
    double circumference = 2 * PI * radius;
    double area = PI * pow(radius, 2);
    std::cout << "Длина окружности равна: " << circumference << std::endl;
    std::cout << "Площадь круга равна: " << area << std::endl;

    return 0;
}
1.30
#include <iostream>
#include <cmath>

int main() {
    // 1.30.а) z = x^3 - 2.5xy + 1.78x^2 - 2.5y + 1
    double x_val_a, y_val_a;
    std::cout << "Введите значения x и y для 1.30.а): ";
    std::cin >> x_val_a >> y_val_a;
    double z_a = pow(x_val_a, 3) - 2.5 * x_val_a * y_val_a + 1.78 * pow(x_val_a, 2) - 2.5 * y_val_a + 1;
    std::cout << "Значение функции z = x^3 - 2.5xy + 1.78x^2 - 2.5y + 1 равно: " << z_a << std::endl;

    // 1.30.б) x = 3.56a + b^3 - 5.8b^2 + 3.8a - 1.5
    double a_val_b, b_val_b;
    std::cout << "Введите значения a и b для 1.30.б): ";
    std::cin >> a_val_b >> b_val_b;
    double x_b = 3.56 * a_val_b + pow(b_val_b, 3) - 5.8 * pow(b_val_b, 2) + 3.8 * a_val_b - 1.5;
    std::cout << "Значение функции x = 3.56a + b^3 - 5.8b^2 + 3.8a - 1.5 равно: " << x_b << std::endl;

    return 0;
}
1.31
#include <iostream>
#include <cmath>

int main() {
    int num1, num2;
    std::cout << "Введите два целых числа для 1.31: ";
    std::cin >> num1 >> num2;
    double arithmetic_mean = (num1 + num2) / 2.0;
    double geometric_mean = sqrt(num1 * num2);
    std::cout << "Среднее арифметическое: " << arithmetic_mean << std::endl;
    std::cout << "Среднее геометрическое: " << geometric_mean << std::endl;

    return 0;
}
1.32
#include <iostream>

int main() {
    double volume, mass;
    std::cout << "Введите объем и массу тела для 1.32: ";
    std::cin >> volume >> mass;
    if (volume == 0) {
        std::cout << "Объем не может быть равен нулю." << std::endl;
        return 1;
    }
    double density = mass / volume;
    std::cout << "Плотность материала тела: " << density << std::endl;

    return 0;
}
1.33
#include <iostream>

int main() {
    double population, area;
    std::cout << "Введите количество жителей и площадь территории для 1.33: ";
    std::cin >> population >> area;
    if (area == 0) {
        std::cout << "Площадь территории не может быть равна нулю." << std::endl;
        return 1;
    }
    double population_density = population / area;
    std::cout << "Плотность населения: " << population_density << std::endl;

    return 0;
}
