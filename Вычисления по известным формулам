#include <iostream>
#include <cmath>

int main() {
    // 1.22.а) y = 7x^2 - 3x + 6
    double x_val_a;
    std::cout << "Введите значение x для 1.22.а): ";
    std::cin >> x_val_a;
    double y_a = 7 * pow(x_val_a, 2) - 3 * x_val_a + 6;
    std::cout << "Значение функции y = 7x^2 - 3x + 6 равно: " << y_a << std::endl;

    // 1.22.б) x = 12a^2 + 7a - 16
    double a_val_b;
    std::cout << "Введите значение a для 1.22.б): ";
    std::cin >> a_val_b;
    double x_b = 12 * pow(a_val_b, 2) + 7 * a_val_b - 16;
    std::cout << "Значение функции x = 12a^2 + 7a - 16 равно: " << x_b << std::endl;

    return 0;
}
