#include <iostream>
#include <cmath>

int main() {
    // 1.24.а) x = sqrt((2a+sin|3a|)/3.56)
    double a_val_a;
    std::cout << "Введите значение a для 1.24.а): ";
    std::cin >> a_val_a;
    double x_a = sqrt((2 * a_val_a + sin(abs(3 * a_val_a))) / 3.56);
    std::cout << "Значение функции x = sqrt((2a+sin|3a|)/3.56) равно: " << x_a << std::endl;

    // 1.24.б) y = sin((3.2+sqrt(1+x))/|5x|)
    double x_val_b;
    std::cout << "Введите значение x для 1.24.б): ";
    std::cin >> x_val_b;
    double y_b = sin((3.2 + sqrt(1 + x_val_b)) / abs(5 * x_val_b));
    std::cout << "Значение функции y = sin((3.2+sqrt(1+x))/|5x|) равно: " << y_b << std::endl;

    return 0;
}
