#include <iostream>
#include <cmath>

int main() {
    double a, b;
    std::cout << "Введите два числа: ";
    std::cin >> a >> b;
    
    double abs_a = std::abs(a);
    double abs_b = std::abs(b);
    
    double arithmetic_mean = (abs_a + abs_b) / 2.0;
    double geometric_mean = std::sqrt(abs_a * abs_b);
    
    std::cout << "Среднее арифметическое модулей: " << arithmetic_mean << std::endl;
    std::cout << "Среднее геометрическое модулей: " << geometric_mean << std::endl;
    
    return 0;
}
