1.36
#include <iostream>
#include <cmath>

int main() {
    const double PI = 3.141592653589793;
    double outer_radius, inner_radius;
    std::cout << "Введите внешний и внутренний радиусы для 1.36: ";
    std::cin >> outer_radius >> inner_radius;
    if (inner_radius >= outer_radius) {
        std::cout << "Внутренний радиус должен быть меньше внешнего." << std::endl;
        return 1;
    }
    double area = PI * (pow(outer_radius, 2) - pow(inner_radius, 2));
    std::cout << "Площадь кольца равна: " << area << std::endl;

    return 0;
}
