}

void task3_17a() {
    cout << "\n3.17a) !A && !B || A при всех A, B:" << endl;
    cout << "┌───┬───┬──────────────┐" << endl;
    cout << "│ A │ B │ !A && !B || A│" << endl;
    cout << "├───┼───┼──────────────┤" << endl;
    
    for (bool A : {true, false}) {
        for (bool B :  {true, false}) {
            cout << "│ " << (A ? "T" : "F") << " │ " << (B ? "T" : "F") << " │ "
                 << (! A && !B || A ? "true " : "false") << "   │" << endl;
        }
    }
    cout << "└───┴───┴──────────────┘" << endl;
}

void task3_17b() {
    cout << "\n3.17b) B || !A && !B при всех A, B:" << endl;
    cout << "┌───┬───┬──────────────┐" << endl;
    cout << "│ A │ B │ B || !A && !B│" << endl;
    cout << "├───┼───┼──────────────┤" << endl;
    
    for (bool A : {true, false}) {
        for (bool B :  {true, false}) {
            cout << "│ " << (A ? "T" : "F") << " │ " << (B ? "T" : "F") << " │ "
                 << (B || !A && !B ? "true " : "false") << "   │" << endl;
        }
    }
    cout << "└───┴───┴──────────────┘" << endl;
}

void task3_17c() {
    cout << "\n3.17c) B && !(A && ! B) при всех A, B:" << endl;
    cout << "┌───┬───┬──────────────────┐" << endl;
    cout << "│ A │ B │ B && !(A && !B)  │" << endl;
    cout << "├───┼───┼──────────────────┤" << endl;
    
    for (bool A : {true, false}) {
        for (bool B : {true, false}) {
            cout << "│ " << (A ? "T" :  "F") << " │ " << (B ? "T" :  "F") << " │ "
                 << (B && !(A && !B) ? "true " : "false") << "     │" << endl;
        }
    }
    cout << "└───┴───┴──────────────────┘" << endl;
}

