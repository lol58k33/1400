#include <iostream>
#include <iomanip>
using namespace std;

void task3_1() {
    cout << "\n3.1. A=T, B=F, C=F" << endl;
    bool A = true, B = false, C = false;
    
    cout << "a) A || B = " << (A || B ?  "true" : "false") << endl;
    cout << "b) A && B = " << (A && B ? "true" :  "false") << endl;
    cout << "c) B || C = " << (B || C ? "true" : "false") << endl;
}

void task3_2() {
    cout << "\n3.2. X=F, Y=T, Z=F" << endl;
    bool X = false, Y = true, Z = false;
    
    cout << "a) X || Z = " << (X || Z ?  "true" : "false") << endl;
    cout << "b) X && Y = " << (X && Y ? "true" :  "false") << endl;
    cout << "c) X && Z = " << (X && Z ? "true" : "false") << endl;
}

void task3_3() {
    cout << "\n3.3. A=T, B=F, C=F" << endl;
    bool A = true, B = false, C = false;
    
    cout << "a) !A && B = " << (! A && B ? "true" :  "false") << endl;
    cout << "b) A || ! B = " << (A || ! B ? "true" : "false") << endl;
    cout << "c) A && B || C = " << (A && B || C ? "true" : "false") << endl;
}

void task3_4() {
    cout << "\n3.4. X=T, Y=T, Z=F" << endl;
    bool X = true, Y = true, Z = false;
    
    cout << "a) !X && Y = " << (!X && Y ?  "true" : "false") << endl;
    cout << "b) X || !Y = " << (X || !Y ? "true" : "false") << endl;
    cout << "c) X || Y && Z = " << (X || Y && Z ? "true" : "false") << endl;
}

void task3_5() {
    cout << "\n3.5. A=T, B=F, C=F" << endl;
    bool A = true, B = false, C = false;
    
    cout << "a) A || B && ! C = " << (A || B && !C ? "true" :  "false") << endl;
    cout << "b) !A && ! B = " << (!A && !B ?  "true" : "false") << endl;
    cout << "c) !(A && C) || B = " << (!(A && C) || B ? "true" : "false") << endl;
    cout << "d) A && ! B || C = " << (A && !B || C ? "true" : "false") << endl;
    cout << "e) A && (! B || C) = " << (A && (!B || C) ? "true" : "false") << endl;
    cout << "f) A || (!(B && C)) = " << (A || (!(B && C)) ? "true" : "false") << endl;
}

void task3_6() {
    cout << "\n3.6. X=F, Y=F, Z=T" << endl;
    bool X = false, Y = false, Z = true;
    
    cout << "a) X || Y && ! Z = " << (X || Y && !Z ? "true" :  "false") << endl;
    cout << "b) !X && ! Y = " << (!X && ! Y ? "true" : "false") << endl;
    cout << "c) !(X && Z) || Y = " << (!(X && Z) || Y ? "true" : "false") << endl;
    cout << "d) X && !Y || Z = " << (X && !Y || Z ? "true" : "false") << endl;
    cout << "e) X && (!Y || Z) = " << (X && (!Y || Z) ? "true" : "false") << endl;
    cout << "f) X || (!(Y || Z)) = " << (X || (!(Y || Z)) ? "true" : "false") << endl;
}

void task3_7() {
    cout << "\n3.7. A=T, B=F, C=F" << endl;
    bool A = true, B = false, C = false;
    
    cout << "a) A || !(A && B) || C = " << (A || !(A && B) || C ? "true" : "false") << endl;
    cout << "b) !A || A && (B || C) = " << (!A || A && (B || C) ? "true" : "false") << endl;
    cout << "c) (A || B && !C) && C = " << ((A || B && !C) && C ? "true" : "false") << endl;
}

void task3_8() {
    cout << "\n3.8. X=F, Y=T, Z=F" << endl;
    bool X = false, Y = true, Z = false;
    
    cout << "a) X && !(Z || Y) || !Z = " << (X && !(Z || Y) || !Z ? "true" : "false") << endl;
    cout << "b) !X || X && (Y || Z) = " << (!X || X && (Y || Z) ? "true" : "false") << endl;
    cout << "c) (X || Y && !Z) && Z = " << ((X || Y && !Z) && Z ? "true" : "false") << endl;
}

void task3_9() {
    cout << "\n3.9. X=T, Y=F, Z=F" << endl;
    bool X = true, Y = false, Z = false;
    
    cout << "a) !X || ! Y || ! Z = " << (! X || !Y || !Z ?  "true" : "false") << endl;
    cout << "b) (!X || !Y) && (X || Y) = " << ((!X || !Y) && (X || Y) ? "true" : "false") << endl;
    cout << "c) X && Y || X && Z || ! Z = " << (X && Y || X && Z || !Z ? "true" : "false") << endl;
}

void task3_10() {
    cout << "\n3.10. A=F, B=F, C=T" << endl;
    bool A = false, B = false, C = true;
    
    cout << "a) (!A || ! B) && !C = " << ((!A || !B) && !C ? "true" : "false") << endl;
    cout << "b) (!A || !B) && (A || B) = " << ((!A || !B) && (A || B) ? "true" : "false") << endl;
    cout << "c) A && B || A && C || !C = " << (A && B || A && C || !C ? "true" :  "false") << endl;
}

void task3_11() {
    cout << "\n3.11. Выражения с переменными" << endl;
    
    cout << "\na) x²+y²==4 при x=1, y=1: " << (1*1 + 1*1 == 4 ? "true" : "false") << endl;
    cout << "b) (x>0) || (y²==4) при x=-1, y=2: " << ((-1 > 0) || (2*2 == 4) ? "true" : "false") << endl;
    cout << "c) (x>0) && (y²==4) при x=-1, y=2: " << ((-1 > 0) && (2*2 == 4) ? "true" : "false") << endl;
    cout << "d) (x*y>0) && (y>x) при x=-2, y=-1: " << ((-2*-1 > 0) && (-1 > -2) ? "true" : "false") << endl;
    cout << "e) (x*y>0) || (y<x) при x=-2, y=-1: " << ((-2*-1 > 0) || (-1 < -2) ? "true" : "false") << endl;
    cout << "f) !(x*y<0) && (y>x) при x=-2, y=-1: " << (! (-2*-1 < 0) && (-1 > -2) ? "true" : "false") << endl;
    cout << "g) !(x*y<0) || (y>x) при x=-1, y=2: " << (!(-1*2 < 0) || (2 > -1) ? "true" : "false") << endl;
}

void task3_12() {
    cout << "\n3.12. Выражения с переменными" << endl;
    
    cout << "\na) x²+y²==0 при x=1, y=-1: " << (1*1 + (-1)*(-1) == 0 ? "true" : "false") << endl;
    cout << "b) (x>2) || (y²==4) при x=-2, y=2: " << ((-2 > 2) || (2*2 == 4) ? "true" : "false") << endl;
    cout << "c) (x>0) && (y²==4) при x=-2, y=2: " << ((-2 > 0) && (2*2 == 4) ? "true" : "false") << endl;
    cout << "d) (x*y>4) && (y>x) при x=-1, y=-2: " << ((-1*-2 > 4) && (-2 > -1) ? "true" : "false") << endl;
    cout << "e) (x*y>0) || (y<x) при x=-2, y=-1: " << ((-2*-1 > 0) || (-1 < -2) ? "true" : "false") << endl;
    cout << "f) !(x*y<1) && (y>x) при x=-1, y=2: " << (! (-1*2 < 1) && (2 > -1) ? "true" : "false") << endl;
    cout << "g) !(x*y<0) || (y>x) при x=-2, y=-1: " << (!(-2*-1 < 0) || (-1 > -2) ? "true" : "false") << endl;
}

// ============================================
// ТАБЛИЦЫ ИСТИННОСТИ (3.13 - 3.26)
// ============================================

void task3_13a() {
    cout << "\n3.13a) !(A && B) при всех A, B:" << endl;
    cout << "┌───┬───┬────────────┐" << endl;
    cout << "│ A │ B │ !(A && B)  │" << endl;
    cout << "├───┼───┼────────────┤" << endl;
    
    for (bool A :  {true, false}) {
        for (bool B : {true, false}) {
            cout << "│ " << (A ? "T" : "F") << " │ " << (B ? "T" : "F") << " │ "
                 << (!(A && B) ? "true " : "false") << "   │" << endl;
        }
    }
    cout << "└───┴───┴────────────┘" << endl;
}

void task3_13b() {
    cout << "\n3.13b) !A || B при всех A, B:" << endl;
    cout << "┌───┬───┬──────────┐" << endl;
    cout << "│ A │ B │ !A || B  │" << endl;
    cout << "├───┼───┼──────────┤" << endl;
    
    for (bool A : {true, false}) {
        for (bool B : {true, false}) {
            cout << "│ " << (A ? "T" :  "F") << " │ " << (B ? "T" :  "F") << " │ "
                 << (! A || B ?  "true " : "false") << "  │" << endl;
        }
    }
    cout << "└───┴───┴──────────┘" << endl;
}

void task3_13c() {
    cout << "\n3.13c) A || !B при всех A, B:" << endl;
    cout << "┌───┬───┬──────────┐" << endl;
    cout << "│ A │ B │ A || ! B  │" << endl;
    cout << "├───┼───┼──────────┤" << endl;
    
    for (bool A : {true, false}) {
        for (bool B : {true, false}) {
            cout << "│ " << (A ? "T" :  "F") << " │ " << (B ? "T" :  "F") << " │ "
                 << (A || ! B ? "true " : "false") << "  │" << endl;
        }
    }
    cout << "└───┴───┴──────────┘" << endl;
}

void task3_14a() {
