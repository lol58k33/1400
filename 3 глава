                 << (!A || !B ? "true " : "false") << "  │" << endl;
        }
    }
    cout << "└───┴───┴──────────┘" << endl;
}

void task3_15b() {
    cout << "\n3.15b) A && (A || ! B) при всех A, B:" << endl;
    cout << "┌───┬───┬────────────────────┐" << endl;
    cout << "│ A │ B │ A && (A || !B)     │" << endl;
    cout << "├───┼───┼────────────────────┤" << endl;
    
    for (bool A : {true, false}) {
        for (bool B : {true, false}) {
            cout << "│ " << (A ? "T" :  "F") << " │ " << (B ? "T" :  "F") << " │ "
                 << (A && (A || !B) ? "true " : "false") << "       │" << endl;
        }
    }
    cout << "└───┴───┴────────────────────┘" << endl;
}

void task3_15c() {
    cout << "\n3.15c) (! A || B) && B при всех A, B:" << endl;
