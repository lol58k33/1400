// ============================================

int main() {
    setlocale(LC_ALL, "Russian");
    
    int choice;
    
    while (true) {
        cout << "\n╔════════════════════════════════════════╗" << endl;
        cout << "║  ГЛАВА 3: ВЕЛИЧИНЫ ЛОГИЧЕСКОГО ТИПА   ║" << endl;
        cout << "╚════════════════════════════════════════╝" << endl;
        
        cout << "\n0.   Теория" << endl;
        cout << "1.  Демо:  Задача 3.1" << endl;
        cout << "13.  Демо: Задача 3.13a (таблица истинности)" << endl;
        cout << "27. Демо:  Задача 3.27 (логические выражения)" << endl;
        cout << "34.  ЗАДАЧА 3.34 (Шахматные фигуры - часть 1)" << endl;
        cout << "35. ЗАДАЧА 3.35 (Безопасное движение - часть 2)" << endl;
        cout << "99.  Выход" << endl;
        
        cout << "\nВыберите (0, 1, 13, 27, 34, 35, 99): ";
        cin >> choice;
        
        switch (choice) {
            case 0:
                printTheory();
                break;
            case 1:
                demo_task_3_1();
                break;
            case 13:
                demo_task_3_13a();
                break;
            case 27:
                demo_task_3_27();
                break;
            case 34:
                task3_34();
                break;
            case 35:
                task3_35();
                break;
            case 99:
                cout << "\nДо встречи!  👋" << endl;
                return 0;
            default:
                cout << "\n❌ Неверный выбор!" << endl;
        }
        
        cout << "\nНажмите Enter для продолжения... ";
        cin.ignore();
        cin.ignore();
    }
    
    return 0;
}
