void task3_16b() {
    cout << "\n3.16b) X || (! X && Y) при всех X, Y:" << endl;
    cout << "┌───┬───┬────────────────────┐" << endl;
    cout << "│ X │ Y │ X || (!X && Y)     │" << endl;
    cout << "├───┼───┼────────────────────┤" << endl;
    
    for (bool X : {true, false}) {
        for (bool Y : {true, false}) {
