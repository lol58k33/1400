void task3_20a() {
    cout << "\n3.20a) !(! X || Y) || !X при всех X, Y:" << endl;
    cout << "┌───┬───┬────────────────────┐" << endl;
    cout << "│ X │ Y │ ! (!X || Y) || !X  │" << endl;
    cout << "├───┼───┼────────────────────┤" << endl;
    
    for (bool X : {true, false}) {
        for (bool Y : {true, false}) {
            cout << "│ " << (X ? "T" :  "F") << " │ " << (Y ? "T" :  "F") << " │ "
                 << (!(!X || Y) || !X ? "true " : "false") << "     │" << endl;
        }
    }
    cout << "└───┴───┴────────────────────┘" << endl;
}

void task3_20b() {
    cout << "\n3.20b) !(!X && !Y) && X при всех X, Y:" << endl;
    cout << "┌───┬───┬────────────────────┐" << endl;
    cout << "│ X │ Y │ ! (!X && !Y) && X  │" << endl;
    cout << "├───┼───┼───��────────────────┤" << endl;
    
    for (bool X : {true, false}) {
        for (bool Y : {true, false}) {
            cout << "│ " << (X ? "T" :  "F") << " │ " << (Y ? "T" :  "F") << " │ "
                 << (!(!X && !Y) && X ? "true " : "false") << "     │" << endl;
        }
    }
    cout << "└───┴───┴────────────────────┘" << endl;
}

void task3_20c() {
    cout << "\n3.20c) !(X || ! Y) || !Y при всех X, Y:" << endl;
    cout << "┌───┬───┬──────────────────┐" << endl;
    cout << "│ X │ Y │ !(X || !Y) || !Y │" << endl;
    cout << "├───┼───┼──────────────────┤" << endl;
    
    for (bool X : {true, false}) {
        for (bool Y : {true, false}) {
            cout << "│ " << (X ? "T" : "F") << " │ " << (Y ? "T" : "F") << " │ "
                 << (!(X || !Y) || !Y ? "true " : "false") << "    │" << endl;
        }
    }
    cout << "└───┴───┴──────────────────┘" << endl;
}

// ============================================
// 3-ПЕРЕМЕННЫЕ ТАБЛИЦЫ (3.21 - 3.26)
// ============================================

void task3_21a() {
    cout << "\n3.21a) !(A || ! B && C) при всех A, B, C:" << endl;
    cout << "┌───┬───┬───┬─────────────────┐" << endl;
    cout << "│ A │ B │ C │ !(A||!B&&C)     │" << endl;
    cout << "├───┼───┼───┼─────────────────┤" << endl;
    
    for (bool A :  {true, false}) {
        for (bool B : {true, false}) {
            for (bool C : {true, false}) {
                cout << "│ " << (A ? "T" :  "F") << " │ " << (B ? "T" :  "F") << " │ " << (C ? "T" :  "F") << " │ "
                     << (!(A || !B && C) ? "true " : "false") << "     │" << endl;
            }
        }
    }
    cout << "└───┴───┴───┴─────────────────┘" << endl;
}

void task3_21b() {
    cout << "\n3.21b) A && !(B && ! C) при всех A, B, C:" << endl;
    cout << "┌───┬───┬───┬──────────────────┐" << endl;
    cout << "│ A │ B │ C │ A&&!(B&&!C)      │" << endl;
    cout << "├───┼───┼───┼──────────────────┤" << endl;
    
    for (bool A : {true, false}) {
        for (bool B : {true, false}) {
            for (bool C : {true, false}) {
                cout << "│ " << (A ? "T" : "F") << " │ " << (B ? "T" : "F") << " │ " << (C ? "T" : "F") << " │ "
                     << (A && !(B && !C) ? "true " : "false") << "      │" << endl;
            }
        }
    }
    cout << "└───┴───┴───┴──────────────────┘" << endl;
}

void task3_21c() {
    cout << "\n3.21c) !(! A || B && C) при всех A, B, C:" << endl;
    cout << "┌───┬───┬───┬──────────────────┐" << endl;
    cout << "│ A │ B │ C │ !(!A||B&&C)      │" << endl;
    cout << "├───┼───┼───┼──────────────────┤" << endl;
    
    for (bool A :  {true, false}) {
        for (bool B : {true, false}) {
            for (bool C : {true, false}) {
                cout << "│ " << (A ? "T" :  "F") << " │ " << (B ? "T" :  "F") << " │ " << (C ? "T" :  "F") << " │ "
                     << (!(!A || B && C) ? "true " : "false") << "      │" << endl;
            }
        }
    }
    cout << "└───┴───┴───┴──────────────────┘" << endl;
}

void task3_22a() {
    cout << "\n3.22a) !(X || ! Y && Z) при всех X, Y, Z:" << endl;
    cout << "┌───┬───┬───┬──────────────────┐" << endl;
    cout << "│ X │ Y │ Z │ !(X||!Y&&Z)      │" << endl;
    cout << "├───┼───┼───┼──────────────────┤" << endl;
    
    for (bool X : {true, false}) {
        for (bool Y : {true, false}) {
            for (bool Z : {true, false}) {
                cout << "│ " << (X ?  "T" : "F") << " │ " << (Y ?  "T" : "F") << " │ " << (Z ?  "T" : "F") << " │ "
                     << (!(X || !Y && Z) ? "true " : "false") << "      │" << endl;
            }
        }
    }
    cout << "└───┴───┴───┴──────────────────┘" << endl;
}

void task3_22b() {
    cout << "\n3.22b) Y || (X && !Y || Z) при всех X, Y, Z:" << endl;
    cout << "┌───┬───┬───┬───────────────────┐" << endl;
    cout << "│ X │ Y │ Z │ Y||(X&&!Y||Z)    │" << endl;
    cout << "├───┼───┼───┼───────────────────┤" << endl;
    
    for (bool X :  {true, false}) {
        for (bool Y : {true, false}) {
            for (bool Z : {true, false}) {
                cout << "│ " << (X ? "T" :  "F") << " │ " << (Y ? "T" :  "F") << " │ " << (Z ? "T" :  "F") << " │ "
                     << (Y || (X && !Y || Z) ? "true " : "false") << "      │" << endl;
            }
        }
    }
    cout << "└───┴───┴───┴───────────────────┘" << endl;
}

void task3_22c() {
