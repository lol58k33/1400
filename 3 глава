        }
    }
    cout << "└───┴───┴──────────┘" << endl;
}

void task3_15a() {
    cout << "\n3.15a) !A || ! B при всех A, B:" << endl;
    cout << "┌───┬───┬──────────┐" << endl;
    cout << "│ A │ B │ !A || !B │" << endl;
    cout << "├───┼───┼──────────┤" << endl;
    
    for (bool A : {true, false}) {
        for (bool B : {true, false}) {
